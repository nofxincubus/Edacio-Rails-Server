<li id = "<%= note.connection_id %>">
  <p><%= note.content %>  </p>
  <p><%= time_ago_in_words(note.created_at) %> ago. <%= link_to "delete", note, method:  :delete,
                                     confirm: "You sure?",
                                     title:   note.content,:complete=>"alert('done')" ,:remote => true, :datatype => "html" ,class: "deletenote", :id => "note" + note.id.to_s() %></p>
<%= javascript_tag do %>
  $("#note" + <%= note.id %>).bind("ajax:complete", function(et, e){
    $("#pastnotemenu").html(e.responseText); // insert content
	 displayConnectionInfo();
  });
<% end %>
</li>


